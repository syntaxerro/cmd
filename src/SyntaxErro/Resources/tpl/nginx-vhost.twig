server {
    listen 80;
    listen [::]:80;

    root {{ DocumentRoot }};
    index index.html index.htm index.php;

    server_name {{ ServerName }} www.{{ ServerName }} {% for alias in ServerAlias %}{{ alias }} {% endfor %};

    {% if SSLCertificateFile %}
    if ($http_user_agent !~ "Windows.*NT\ 5") {
        return 301 https://{{ ServerName }}$request_uri;
    }
    {% endif %}

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ [^/]\.php(/|$) {
        fastcgi_split_path_info ^(.+?\.php)(/.*)$;
        if (!-f $document_root$fastcgi_script_name) {
            return 404;
        }

        fastcgi_pass {{ FastcgiPass|default('127.0.0.1:9000') }};
        fastcgi_index index.php;
        include fastcgi_params;
    }

    location ~ /\.ht {
        deny all;
    }

    access_log /var/log/nginx/{{ ServerName }}_access.log;
    error_log /var/log/nginx/{{ ServerName }}_error.log;
}

