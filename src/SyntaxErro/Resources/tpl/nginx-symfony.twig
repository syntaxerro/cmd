upstream {{ ServerName }}_phpfcgi {
    server {{ FastcgiPass|default('127.0.0.1:9000') }};
    # server unix:/var/run/php5-fpm.sock; #for PHP-FPM running on UNIX socket
}
server {
    listen 80;

    server_name {{ ServerName }} www.{{ ServerName }} {% for alias in ServerAlias %}{{ alias }} {% endfor %};
    root {{ DocumentRoot }};

    access_log /var/log/nginx/{{ ServerName }}_access.log;
    error_log /var/log/nginx/{{ ServerName }}_error.log;

    {% if SSLCertificateFile %}
        if ($http_user_agent !~ "Windows.*NT\ 5") {
            return 301 https://{{ ServerName }}$request_uri;
        }
    {% endif %}

    # strip app.php/ prefix if it is present
    rewrite ^/app\.php/?(.*)$ /$1 permanent;

    location / {
        index app.php;
        try_files $uri @rewriteapp;
    }

    location @rewriteapp {
        rewrite ^(.*)$ /app.php/$1 last;
    }

    # pass the PHP scripts to FastCGI server from upstream phpfcgi
    location ~ ^/(app|app_dev|config)\.php(/|$) {
        fastcgi_pass {{ ServerName }}_phpfcgi;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param  HTTPS off;
    }
}


{% if SSLCertificateFile %}
